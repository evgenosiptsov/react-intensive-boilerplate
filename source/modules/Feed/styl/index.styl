.feed
  align-items: center;
  background-color: var(--paletteColor3);
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  &__navbar
    align-items: center;
    background-color: #4267b2;
    border-bottom: #29487d;
    display: flex;
    height: 42px;
    justify-content: center;
    margin-bottom: 20px;
    padding: 0 5px;
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 1;
    &__status
      align-items: center;
      background: #e9ebee;
      border: 1px solid #365899;
      border-radius: 5px;
      color: #365899;
      cursor: pointer;
      display: flex;
      font-size: 14px;
      font-weight: 500;
      height: 24px;
      justify-content: space-between;
      left: 5px;
      margin-right: 5px;
      min-width: 80px;
      padding: 5px;
      position: absolute;
      top: 9px;
      user-select: none;
      &--fetching
        background-color white

  &__editor
    textarea
      width: 100%


  &__post
      background-color: rgb(255, 255, 255);
      border: 1px solid rgb(225, 226, 227);
      border-radius: 3px;
      margin-top: 10px;
      max-width: calc(100vw - 20px);
      padding: 12px;
      position: relative;
      transition: box-shadow .3s ease;
      width: 500px;
      word-wrap: break-word;
      &__user
        & time
          color: rgb(144, 148, 156);
          font-size: 12px;
          top: 35px;
          cursor: pointer;
          left: 60px;
          position: absolute;
          text-decoration: none;
        & a
          color: rgb(54, 88, 153);
          font-weight: 700;
          top: 15px;
          cursor: pointer;
          left: 60px;
          position: absolute;
        text-decoration: none;
      & p
        font-size: 18px;
        font-weight: 400;
        line-height: 1.4;
        margin-top: 50px;
      &__actions
        background-repeat: no-repeat;
        content: "";
        cursor: pointer;
        height: 10px;
        position: absolute;
        right: 12px;
        top: 12px;
      &__footer
        margin-top: 50px;
        user-select: none;
        &__like
          color: rgb(97, 103, 112);
          cursor: default;
          font-size: 13px;
          font-weight: 600;
          margin-left: 6px;
          padding-left: 20px;
          padding-top: 2px;
          position: relative;
          &:before
            background-image: url("../../../theme/assets/like.png");
            background-position: 0 -18px;
            background-repeat: no-repeat;
            background-size: 18px;
            content: "";
            display: block;
            height: 18px;
            left: -2px;
            position: absolute;
            top: -1px;
            width: 18px;
        &__likes
          align-items: center;
          background-color: rgb(246, 247, 249);
          border: 1px solid rgb(225, 226, 227);
          display: flex;
          height: 30px;
          margin: 10px 0 0;
          padding-left: 30px;
          position: relative;
          &__counter
            color: rgb(54, 88, 153);
            cursor: pointer;
            font-size: 13px;
            &:before
              background-image: url("../../../theme/assets/like.png");
              background-position: 0 -37px;
              background-repeat: no-repeat;
              background-size: 18px;
              content: "";
              display: block;
              height: 19px;
              left: 3px;
              position: absolute;
              top: 3px;
              width: 18px;
